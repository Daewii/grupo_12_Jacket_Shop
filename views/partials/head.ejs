<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/main-section-style.css">
    <link rel="stylesheet" href="/css/section2-Styles.css">
    <link rel="stylesheet" href="/css/section3-Styles.css">
    <link rel="stylesheet" href="/css/footer-styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400&family=Roboto&display=swap"
        rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />

    <title>Jacket Shop</title>
</head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/scripts.js"></script>
<body>
    <header>
        <div class="navbar">
            <div class="navbar-top">
                <div class="burger-menu">
                    <i class="fas fa-bars"></i>
                </div>
                <div class="logo">
                    <img src="\images\Jacket Shop-logo-white.png" alt="logo blanco">
                </div>
                <div class="icons-navbar">
                    <div class="user-icon">
                        <div class="login-user-div">
                        <i class="fas fa-user"></i>
                        <p>Ingresa</p>
                        </div>
                        <div class="hidden-login">
                        <ul>
                            <div class="account">
                                <div class="login-singin">
                                    <div class="login">Ingresa</div>
                                    <div class="singin"><a href="#"><span>Crear cuenta</span></a></div>
                                </div>
                                <form class="form-login">
                                    <div class="user-input">
                                        <input class="user" name="user-login" type="email" placeholder="Email">
                                    </div>
                                    <div class="password-input">
                                        <input class="password" name="user-login" type="password"
                                            placeholder="Contraseña">
                                    </div>
                                    <div class="forgot-password">
                                        <a href="#">Olvidaste tu contraseña?</a>
                                    </div>
                                    <div class="login-btn">
                                        <button>Ingresar</button>
                                    </div>
                                </form>
                                <div class="login-with-socials">
                                    <div class="title-socials">Ingresa con:</div>
                                    <div class="socials-btn">
                                        <button class="social-btn-f"><i
                                                class="fab fa-facebook-f"></i><span>Facebook</span></button>
                                        <button class="social-btn-g"><i
                                                class="fab fa-google"></i><span>Google</span></button>
                                    </div>
                                </div>
                            </div>
                        </ul>
                    </div>
                    </div>
                    <div class="shopping-car-icon">
                        <i class="fas fa-shopping-cart"></i>
                        <p>Carrito</p>
                    </div>
                    <div class="mode-icon">
                        <i class="fas fa-sun"></i>
                        <p>Modo</p>
                    </div>
                </div>
                <div class="search-bar">
                    <input type="text" placeholder="Buscar">
                    <div class="search">
                        <i class="fa fa-search"></i>
                    </div>
                </div>
            </div>
            <div class="navbar-bottom">
                <div class="list-navbar">
                    <ul>
                        <div class="dropdown-cat-header">
                            <li type="none"><button class="dropdown-btn"><a href="#">Mujer</a></button></li>
                            <div class="dropdown-content">
                                <a href="#">Jean</a>
                                <a href="#">Cuero</a>
                                <a href="#">Tela</a>
                                <a href="#">Termicas</a>
                            </div>
                        </div>
                        <div class="dropdown-cat-header">
                            <li type="none"><button class="dropdown-btn"><a href="#">Hombre</a></button></li>
                            <div class="dropdown-content">
                                <a href="#">Jean</a>
                                <a href="#">Cuero</a>
                                <a href="#">Tela</a>
                                <a href="#">Termicas</a>
                            </div>
                        </div>
                        <div class="dropdown-cat-header">
                            <li type="none"><button class="dropdown-btn"><a href="#">Lo nuevo</a></button></li>
                            <div class="dropdown-content">
                                <a href="#">Link 1</a>
                                <a href="#">Link 2</a>
                                <a href="#">Link 3</a>
                                <a href="#">Link 4</a>
                            </div>
                        </div>
                        <div class="dropdown-cat-header">
                            <li type="none"><button class="dropdown-btn"><a href="#">Ofertas</a></button></li>
                            <div class="dropdown-content">
                                <a href="#">Link 1</a>
                                <a href="#">Link 2</a>
                                <a href="#">Link 3</a>
                                <a href="#">Link 4</a>
                            </div>
                        </div>
                    </ul>
                </div>
            </div>
        </div>
    </header>
